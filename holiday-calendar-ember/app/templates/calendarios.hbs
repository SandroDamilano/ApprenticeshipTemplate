  <div class="nav-wrapper">
    <a class="brand-logo">= Mis Calendarios</a>
    <ul class="right hide-on-med-and-down">
      Crear un nuevo calendario
      <a class="btn-floating btn-large waves-effect waves-light pink"><i class="material-icons">add</i></a>
    </ul>
  </div>
</nav>


<div class="fixed-action-btn">
  <a class="btn-floating btn-large red">
    <i class="large material-icons">mode_edit</i>
  </a>
  <ul>
    <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
    <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
    <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
    <li><a class="btn-floating blue"><i class="material-icons">attach_file</i></a></li>
  </ul>
</div>

<center>


  <!-- Dropdown Trigger -->
  <a class='dropdown-button btn' href='#' data-activates='dropdown1'>Ver Calendarios</a>

  <!-- Dropdown Structure -->
  <ul id='dropdown1' class='dropdown-content'>
    <li><a href="#!">one</a></li>
    <li><a href="#!">two</a></li>
    <li class="divider"></li>
    <li><a href="#!">three</a></li>
    <li><a href="#!"><i class="material-icons">view_module</i>four</a></li>
    <li><a href="#!"><i class="material-icons">cloud</i>five</a></li>
  </ul>

  <div class="row">
    <div class="col s4"><span class="white-text">.</span></div>
    <div class="col s4">
      <div class="input-field">
        <select class="browser-default" onchange={{action "seleccionar" value="target.value"}}>
          <option disabled selected>Seleccione el calendario deseado:</option>
          {{#each model as |calendario|}}
            <option value={{calendario.id}}>{{calendario.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>

  <div class="col s4">
    {{#link-to 'calendarios.calendario.feriados' calendarioSeleccionado class="btn btn-primary"}}
      Ver calendario
    {{/link-to}}
  </div>
</center>

